@model IEnumerable<AucApp.Models.product>

@{
    ViewBag.Title = "DoABid";
}

<h2>Do A Bid</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.min_bid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bid_end_time)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.user_id)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.ImgUrl)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.min_bid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bid_end_time)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.user_id)
                </td>*@
            <td>
                <img src="~/images/@item.ImgUrl" width="200" height="100" />
            </td>
            <td>
                @Html.ActionLink("Make A Bid", "MakeABid", new { id = item.id })
            </td>
        </tr>
    }

</table>
